<h1><%= @user.name%></h1>
<p><%= @user.email%></p>
<h3>Tweets</h3>
<% @tweets.each do |tweet|%>
  <% if has_retweet = tweet.retweet_id.present? %>
      <% retweet = Tweet.find_by(id: tweet.retweet_id)%>
  <% end %>
  <%= render 'tweets/tweet', tweet: tweet, has_retweet: has_retweet, retweet: retweet %>
<% end %>