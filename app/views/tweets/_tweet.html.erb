<% if defined?(tweet) && tweet.present? %>
  <div class="card" >
    <div class="card-body">
      <h5 class="card-title"><%=tweet.user.email%></h5>
      <% if tweet.reply_id.present? %>
        <% reply_to_tweet = Tweet.find_by(id:tweet.reply_id) %>
        <% if reply_to_tweet.present? %>
          <h6 class="card-subtitle mb-2 text-muted"><%= link_to "reply to #{Tweet.find_by(id:tweet.reply_id).user.email}", tweet_path(id:tweet.reply_id) %></h6>
        <% else %>
          <h6 class="card-subtitle mb-2 text-muted"><%= "reply to deleted tweet"%></h6>
        <% end %>
      <% end %>
      <p class="card-text"><%=tweet.content%></p>
      <% if has_retweet %>
        <%= render '/tweets/tweet', tweet: retweet, has_retweet: false %>
        <br/>
      <% end %>
      <%= Like.where(tweet_id:tweet.id).size%>
      <% if like=Like.find_by(tweet_id:tweet.id, user_id:current_user&.id) %>
